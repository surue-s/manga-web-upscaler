{
  "manifest_version": 3,
  "name": "Manga Web Upscaler",
  "version": "1.0.0",
  "description": "Upscale manga images using AI (RealESRGAN) in the browser.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Manga Web Upscaler",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "service-worker.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "worker/inference-worker.js",
        "models/esrgan_anime_model.onnx"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "permissions": ["scripting", "storage", "activeTab"]
}